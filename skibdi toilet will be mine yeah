local Players = game:GetService("Players")
local player = Players.LocalPlayer
local runService = game:GetService("RunService")

--// Toggle and Slider Variables
local magtoggle = false
local range = 0

--// Function to adjust catch objects
local function catchObjects(plr, range)
    local character = plr.Character
    if character then
        local catchLeft = character:FindFirstChild('CatchLeft')
        local catchRight = character:FindFirstChild('CatchRight')

        if catchLeft and catchRight then
            catchLeft.Size = Vector3.new(range, range, range)
            catchRight.Size = Vector3.new(range, range, range)
        else
            warn("Catch objects not found in character.")
        end
    else
        warn("Character not found for player.")
    end
end

--// Function to reset catch objects
local function resetCatch(plr)
    local character = plr.Character
    if character then
        local catchLeft = character:FindFirstChild('CatchLeft')
        local catchRight = character:FindFirstChild('CatchRight')

        if catchLeft and catchRight then
            catchLeft.Size = Vector3.new(1.4, 1.65, 1.4)
            catchRight.Size = Vector3.new(1.4, 1.65, 1.4)
        else
            warn("Catch objects not found in character.")
        end
    else
        warn("Character not found for player.")
    end
end

--// Function to handle button click (toggle catch objects)
local function onButtonClick()
    if magtoggle then
        resetCatch(player)
    else
        catchObjects(player, range)
    end
    magtoggle = not magtoggle
end

--// Create toggle for enabling/disabling catch objects
Misc:CreateToggle({
    Title = "MobileV2 mags BY REMY",
    Binding = false,
    CurrentValue = false,
    Callback = function(v)
        magtoggle = v
        if magtoggle then
            catchObjects(player, range)
        else
            resetCatch(player)
        end
    end
})

--// Create slider for adjusting catch range
Misc:CreateSlider({
    Title = "MobileV2 range BY REMY",
    CurrentValue = 0,
    Range = {0, 500},
    Callback = function(v)
        range = v
        if magtoggle then
            catchObjects(player, range)
        end
    end
})
